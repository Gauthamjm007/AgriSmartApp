<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/text_n_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:text="Location changed alert"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/text_n_date"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/text_n_time"
        android:background="@drawable/nt"
        android:text="05-04-2018"
        android:textColor="#FFFF00"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/text_n_time"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/nt"
        android:text="9:25:15 am"
        android:textColor="#FFFF00"

        android:textSize="18dp" />



</LinearLayout>