<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info_bar_package.BatteryFragment">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="center">


       <ImageView
           android:id="@+id/iv_battery"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:src="@drawable/hundred"
           android:paddingBottom="20dp"/>





       <TextView

           android:id="@+id/textView4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:text="Battery Voltage: 5V "
           android:textColor="#000"
           android:textSize="20dp" />

       <TextView
           android:id="@+id/textView3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:text="Battery Type: Li-ion"
           android:textColor="#000"
           android:textSize="20dp" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:text="Battery Status: Charging"
           android:textColor="#000"
           android:textSize="20dp" />

       <TextView
           android:id="@+id/textView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Battery Health: Good"
           android:textColor="#000000"
           android:textSize="20dp" />
       <TextView
           android:id="@+id/battery_the_temp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="#000"
           android:textSize="20dp" />


   </LinearLayout>

</FrameLayout>